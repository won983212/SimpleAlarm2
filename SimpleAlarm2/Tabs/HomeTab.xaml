<UserControl x:Class="SimpleAlarm2.Tabs.HomeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleAlarm2.Tabs"
             xmlns:control="clr-namespace:SimpleAlarm2.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="700">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <control:AnalogClock Grid.ColumnSpan="2"/>
        <TextBlock Grid.Row="1" FontSize="18pt" VerticalAlignment="Bottom" Margin="0,0,5,0">AM</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="42pt" Margin="0,16,0,0">09:17</TextBlock>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" 
                   FontSize="9pt" Foreground="{StaticResource Gray600}">2020.05.17 Friday</TextBlock>
    </Grid>
</UserControl>
